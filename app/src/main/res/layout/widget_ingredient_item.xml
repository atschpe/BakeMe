<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxLines="4"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/widget_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/widget_recipe_tv"
        style="@style/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/widget_divider"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/half_margin"
        android:textStyle="bold"
        tools:text="Recipe Title" />

    <TextView
        android:id="@+id/widget_ingredient_tv"
        style="@style/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/widget_recipe_tv"
        android:layout_marginLeft="@dimen/half_margin"
        android:layout_marginStart="@dimen/half_margin"
        android:layout_marginTop="@dimen/half_margin"
        tools:text="listed ingredient" />

    <CheckBox
        android:id="@+id/widget_ingredient_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/widget_recipe_tv"
        android:layout_marginEnd="@dimen/half_margin"
        android:layout_marginRight="@dimen/half_margin" />

</RelativeLayout>
